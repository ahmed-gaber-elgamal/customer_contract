<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_customer_contract" model="ir.ui.view">
            <field name="name">res.partner.customer.contract</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page groups="customer_contract.group_customer_contract_user" name="customer_contract" string="Customer Contract">
                        <group>
                            <field name="total_contracts_price"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>